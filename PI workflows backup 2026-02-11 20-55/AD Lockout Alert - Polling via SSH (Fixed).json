    {
      "parameters": {
        "jsCode": "// Get the list of users found in the current run\nconst currentLockouts = $input.all();\n\n// Access n8n's persistent storage\nconst staticData = $getWorkflowStaticData('global');\nstaticData.alreadyAlerted = staticData.alreadyAlerted || {};\n\n// Filter out users we've already emailed about\nconst newLockouts = currentLockouts.filter(item => {\n  const user = item.json.username;\n  const lastAlertTime = staticData.alreadyAlerted[user];\n  \n  // If we haven't seen this user, or it's been over 2 hours, alert again\n  const twoHoursAgo = Date.now() - (2 * 60 * 60 * 1000);\n  \n  if (!lastAlertTime || lastAlertTime < twoHoursAgo) {\n    staticData.alreadyAlerted[user] = Date.now(); // Record the alert time\n    return true;\n  }\n  return false;\n});\n\nreturn newLockouts;"
      },
