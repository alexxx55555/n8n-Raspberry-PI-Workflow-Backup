    {
      "parameters": {
        "jsCode": "let raw = $input.first().json.stdout;\nlet events = [];\n\nif (raw && typeof raw === 'string' && raw.trim() !== '') {\n  try {\n    let parsed = JSON.parse(raw);\n    events = Array.isArray(parsed) ? parsed : [parsed];\n  } catch (e) {\n    return [];\n  }\n}\n\nreturn events.map(e => {\n  const dateObj = new Date(e.Timestamp);\n  \n  // Format: Feb 11, 2026, 8:09 PM\n  const friendlyTime = dateObj.toLocaleString('en-US', {\n    month: 'short',\n    day: 'numeric',\n    year: 'numeric',\n    hour: 'numeric',\n    minute: '2-digit',\n    hour12: true\n  });\n\n  return {\n    json: {\n      username: e.Username,\n      computer: e.CallerComputer || 'UNKNOWN',\n      timestamp: friendlyTime\n    }\n  };\n});"
      },
