        "subject": "={{ `ðŸš¨ URGENT: ${$input.all().filter(i => i.json.username).length} Account(s) Currently Locked Out` }}",
        "message": "={{ `<h2>AD Account Lockouts (Live Status)</h2>` + \n($input.all().filter(i => i.json.username).length === 0 ? \n    `<p><em>No accounts are currently locked.</em></p>` : \n    `<table style=\"border-collapse: collapse; width: 100%; max-width: 750px; border: 1px solid #ddd;\">\n        <tr style=\"background-color: #f0f0f0;\">\n            <th style=\"padding: 12px; border: 1px solid #ddd; text-align: left;\">User</th>\n            <th style=\"padding: 12px; border: 1px solid #ddd; text-align: left;\">Status</th>\n            <th style=\"padding: 12px; border: 1px solid #ddd; text-align: left;\">Source Computer</th>\n            <th style=\"padding: 12px; border: 1px solid #ddd; text-align: left;\">Last Check</th>\n        </tr>` + \n    $input.all().map(item => `\n        <tr>\n            <td style=\"padding: 10px; border: 1px solid #ddd;\"><b>${item.json.username}</b></td>\n            <td style=\"padding: 10px; border: 1px solid #ddd;\"><span style=\"color: #d9534f; font-weight: bold;\">LOCKED</span></td>\n            <td style=\"padding: 10px; border: 1px solid #ddd; font-family: monospace;\">${item.json.computer || 'UNKNOWN'}</td>\n            <td style=\"padding: 10px; border: 1px solid #ddd;\">${item.json.timestamp}</td>\n        </tr>`).join('') + \n    `</table>`) + \n`<p style=\"margin-top: 25px; color: #777; font-size: 0.85em;\">\n    <em>Generated via n8n â€¢ ${$now.toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: '2-digit', hour12: true })}</em>\n</p>` }}",
